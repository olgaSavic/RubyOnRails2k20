<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
    </li>
  <% end %>
</ul>
<br>
<br>
<%= link_to ">> Go to Tags List", tags_path %>
<br>
<%= link_to ">> Go to Authors List", authors_path %>

<% if logged_in? %>
<%= link_to "Create a New Article", new_article_path, class: "new_article" %>
<% end %>